@{
    ViewData["Title"] = "Chi tiết Blog";
    Layout = "../Shared/_Layout.cshtml";
}
@* @model IEnumerable<DoAnFramework.Models.Blog>
 *@
    <link rel="stylesheet" href="~css/store/blog-detail.css">

    <div class="container-heading blog-heading">
        <div class="breadcrumb-box">
             <!-- breadcrum -->
            <div class="row1">
                <nav class="blog-list-link" aria-label="breadcrumb">
                    <ul class="breadcrumb">
                        <li class="breadcrumb-item"><a  asp-controller="Home" asp-action="Index">Trang chủ</a></li>
                        <li><a class="breadcrumb-item" >Blog</a></li>
                        <li><a class="breadcrumb-item active">Thông tin bài viết</a></li>
                    </ul>
                </nav>
            </div>
        @if (Model != null)
        {
            foreach (var item in Model)
            {
                    <div class="blog-title row2">
                        <h4>@item.BlogTitle</h4>

                    <div class="row3">
                        <div class="blog-author">
                            <p>@item.User</p>
                        </div>
                        <div class="blog-date">
                            <p>@item.BlogDay</p>
                        </div>
                    </div>
                    <div class="blog-img">
                        <img src="~/img/bookstore_2.jpg">
                    </div>    
            </div>


            <div class="blog-content">
                <p>@item.Content</p>
            </div>
            }
        }

