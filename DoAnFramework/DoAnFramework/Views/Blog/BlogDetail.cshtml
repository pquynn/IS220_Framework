@{
    ViewData["Title"] = "Chi tiết Blog";
    Layout = "../Shared/_Layout.cshtml";
}
@model DoAnFramework.Models.Blog

    <link rel="stylesheet" href="~/css/store/blog-detail.css">

    <div class="container-heading blog-heading">
        <div class="breadcrumb-box">
             <!-- breadcrum -->
            <div class="row1">
                <nav class="blog-list-link" aria-label="breadcrumb">
                    <ul class="breadcrumb">
                        <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Trang chủ</a></li>
                        <li><a class="breadcrumb-item" asp-controller="Blog" asp-action="Index">Blog</a></li>
                        <li><a class="breadcrumb-item active">Thông tin bài viết</a></li>
                    </ul>
                </nav>
            </div>
        @if (Model != null)
        {
                    <div class="blog-title row2">
                        <h4>@Model.BlogTitle</h4>

                    <div class="row3">
                        <div class="blog-author">
                            <p>@Model.UserName</p>
                        </div>
                        <div class="blog-date">
                            <p>@Model.BlogDay</p>
                        </div>
                    </div>
                    <div class="blog-img">
                    @if (Model.BlogImage != null)
                    {
                        <img src="@String.Format("data:image/png;base64,{0}", Convert.ToBase64String(Model.BlogImage))">    
                    }
                    </div>    
            </div>


            <div class="blog-content">
                <p>@Model.Content</p>
            </div>
        }
