@{
    ViewData["Title"] = "Mua hàng";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model DoAnFramework.Models.ViewModel.Result
<!-- BODY: START -->
<span id="error">@if(Model != null)@Model.errorCode</span>

@if(Model.errorCode != "0" && Model.errorCode != "")
{
    <div style="height:60vh;display: flex;flex-direction: column;justify-content: center;">
        <h1  class="buy-message" style="text-align: center; font-size: 45px">Đặt hàng không thành công</h1>
        <div class="icon" style="text-align: center">
            <ion-icon name="close-circle-outline" style="font-size: 60px; color:red"></ion-icon>
        </div>
    </div>
}
else 
{
    <div style="height:60vh;display: flex;flex-direction: column;justify-content: center;">
        <h1 class="buy-message" style="text-align: center; font-size: 45px">Đặt hàng thành công!</h1>
        <div class="icon" style="text-align: center">
            <ion-icon name="checkmark-circle-outline"
                      style="font-size: 60px; color: #126b00"></ion-icon>
        </div>
    </div>
}
<!-- BODY: END -->
<script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>

<script>
    $(document).ready(function () {
        console.log($('#error').text());
        if ($('#error').text() != "" && $('#error').text() != "0") {
            $.ajax({
                url: "/Checkout/CancelOrder",
                type: "POST",
                // dataType: "json",
                data: {
                },
                success: function (response) {
                    if (response) {
                        console.log('success');
                    }
                    else
                        console.log('failed');
                },
                error: function () {
                    console.log(0);
                },
            });
        }
    });
</script>
